
/**
 * main.c
 */
#include "DSP28x_Project.h"
#include "PWM.h"
#include "Uart.h"
#include "ADC.h"
#include "IO.h"
#include "UserSet.h"
#include "Tool.h"
Uchar8 stringBuffer[5];
void main(void)
{
    Uchar8 convertOKFlag = 0;
    //initialize clock
    InitSysCtrl();
    //initialized pie interrupt
    InitPieCtrl();
    IER = 0x0000; //CPU interrupt enable bits
    IFR = 0x0000; //flag bits
    InitPieVectTable();
    //FLASH mode config
    //MemCopy(&RamfuncsLoadStart, &RamfuncsLoadEnd,&RamfuncsRunStart);
    //InitFlash();
    //initialize module
    initGlobalVar();
    ADCInit();
    uartInit(9600, PORTB);
    pwmInit(2999); //150M/(2999+1) = 50KHZ
    adjustVoltage(POWER_ON);
    while (1)
    {
        if (receiveOKFlag)
        {
            receiveOKFlag = 0;
            //uartSendString(receiveBuffer);
            updateUserSettingParamater();
            adjustVoltage(POWER_SETTING);
        }
        ADCReadValue();
        convertOKFlag =  ADCConvertCalData();
//        numToStr(samplingValue[0], 4, 0, stringBuffer);
//        uartSendString(stringBuffer);
//        numToStr(samplingValue[1], 4, 0, stringBuffer);
//        uartSendString(stringBuffer);
//        numToStr(samplingValue[2], 4, 0, stringBuffer);
//        uartSendString(stringBuffer);
//        numToStr(samplingValue[3], 4, 0, stringBuffer);
//        uartSendString(stringBuffer);
 //       DELAY_US(1000000);
          if(convertOKFlag){
            sendElecData();
          }
          DELAY_US(5000);
    }
}
